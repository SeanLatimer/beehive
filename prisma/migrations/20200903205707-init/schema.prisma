datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String
  courses   Course[]
}

model Course {
  id          Int      @default(autoincrement()) @id
  title       String
  description String?
  imageUrl    String?
  lessons     Lesson[]
  author      User?    @relation(fields: [authorId], references: [id])
  authorId    Int?
}

model Lesson {
  id          Int     @default(autoincrement()) @id
  title       String
  description String?
  content     String?
  course      Course  @relation(fields: [courseId], references: [id])
  courseId    Int
}
